<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:background="@drawable/background_color"
        android:layout_height="match_parent"
        android:id="@+id/constraintLayout2">
    <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/constraintLayout"
            style="@style/subBackgroundStyle"
            android:layout_height="571dp"
            android:layout_width="350dp">

        <ImageView
                android:id="@+id/logo"
                android:src="@drawable/wallet_blue"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.457"
                style="@style/logoImageStyle" android:layout_marginTop="12dp"/>
        <EditText
                style="@style/InputTextField"
                android:hint="@string/shop_name"
                android:id="@+id/shopName"
                android:drawableRight="@drawable/person"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.432"
                app:layout_constraintTop_toBottomOf="@+id/logo"
                android:layout_marginTop="28dp"/>
        <EditText
                style="@style/InputTextField"
                android:hint="Password"
                android:inputType="textPassword"
                android:id="@+id/email"
                android:drawableRight="@drawable/security"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.447"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/shopName"/>

        <EditText
                style="@style/InputTextField"
                android:inputType="textPassword"
                android:hint="CRN"
                android:drawableRight="@drawable/security"
                android:id="@+id/CRNNumber"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.491"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/email"/>

        <EditText
                style="@style/InputTextField"
                android:inputType="text"
                android:hint="@string/location"
                android:drawableRight="@drawable/location"
                android:id="@+id/location"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.576"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/CRNNumber"/>


        <Button
                android:text="Sign Up "
                android:id="@+id/signUp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.533"
                style="@style/btnStyle"
                android:layout_marginBottom="4dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/location"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
            android:text="@string/sign_up_account"
            android:id="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            style="@style/pageTitleStyle"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>

